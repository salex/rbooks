      span.indent
        strong Account type: 
        = @account.account_type
      span.indent
        strong Parent: 
        = @account.parent_id
      span.indent
        strong Code: 
        = @account.code
      span.indent
        strong Description: 
        = @account.description
      span.indent
        strong Placeholder: 
        = @account.placeholder
    #summary.toggleMe.w3-show.s12.w3-col

      .w3-row.w3-margin
        .w3-col.s4[style="max-height:20vh;overflow:scroll;"]
