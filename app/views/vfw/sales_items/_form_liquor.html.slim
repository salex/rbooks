= form_for @sales_item, url: sales_item_path(@sales_item) do |f|
  - if @sales_item.errors.any?
    #error_explanation
      h2 = "#{pluralize(@sales_item.errors.count, "error")} prohibited this sales_item from being saved:"
      ul
        - @sales_item.errors.full_messages.each do |message|
          li = message
  .form-fields
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :price
      = f.text_field :price
    .field
      = f.label :purchase
      = f.text_field :purchase_price
    .field
      = f.label :cost
      = f.text_field :cost
    .field
      = f.label :department
      = f.text_field :department
    .field
      = f.label :markup
      = f.text_field :markup
    .field
      = f.label :quanity
      = f.number_field :quanity
    .field
      = f.label :alert
      = f.number_field :alert
    .field
      = f.label :size
      = f.number_field :size
    .field
      = f.label :bottles
      = f.number_field :bottles
    .field
      = f.label :percent
      = f.number_field :percent
  .actions = f.submit
